/*
Colours definition
*/

body-bk-colour = #363635
navbar-bk-colour = #D75C37
white-colour = #f5f5f5
navbar-hover-bk-colour = #B43D1A
dev-colour = #5cb85c
geek-colour = #5bc0de
car-colour = #f0ad4e
gamer-colour =  #d9534f
about-bk-colour= #EEEDEB
contact-bk-colour = #84B5D8
star-dark = #2c3e50
star-light = #fff

html, body
  width: 100%
  height: 100%

h1
  margin: 0
  font-size: 3em

body
  font-family: 'Quicksand', sans-serif
  font-weight: normal
  -webkit-font-smoothing: antialiased
  background-color: body-bk-colour
  
section
  padding 100px 0


.intro-section img 
  display: block
  margin: 0 auto 20px
  width:256px
  height:256px

@media(min-width:768px)
  .navbar
    padding: 25px 0
    -webkit-transition: background .5s ease-in-out,padding .5s ease-in-out
    -moz-transition: background .5s ease-in-out,padding .5s ease-in-out
    transition: background .5s ease-in-out,padding .5s ease-in-out

  .top-nav-collapse 
    padding: 0;

  .intro-section .container, .not-found .container
    padding-bottom: 100px
    padding-top: 100px
    
  .intro-section .intro-text .name 
    font-size: 6em;
    

  .intro-section .intro-text .details 
    font-size: 1.75em;
    
@media(max-width:767px)
  section
    padding: 75px 0
  
  .intro-section img 
    width: 128px
    height: 128px

.navbar-website
  margin-bottom: 0
  background-color: navbar-bk-colour
  border-bottom: 0

.navbar-website .navbar-toggle .icon-bar
  background-color: white-colour
  
.nav.navbar-nav a, .navbar-brand, .navbar-brand:hover, .navbar-brand:focus, .navbar-brand:focus
  color: white-colour

.nav>li>a:focus, .nav>li>a:hover, .nav>.active
  background-color: navbar-hover-bk-colour
  
.dev 
  color: dev-colour
  
.geek
  color:geek-colour
  
.car
  color: car-colour

.gamer
  color: gamer-colour
  
.img-centered 
  margin: 0 auto

.intro-text .name
  text-shadow: 3px 3px 0px navbar-bk-colour;
  font-size: 2em
  font-weight: 700
  
.intro-text .details
  font-size: 1.25em;
  font-weight: 300;


  
.intro-section, .contact-section, footer, .not-found
  background: body-bk-colour
  color: white-colour

.about-section 
  background: about-bk-colour



hr.star-contact, hr.star-light , hr.star-about
  margin: 25px auto 30px
  padding: 0
  max-width: 250px
  border: 0
  border-top: solid 5px
  text-align: center
  &:after
    content: "\f1d0"
    display: inline-block
    position: relative
    top: -.8em
    padding: 0 .25em
    font-family: FontAwesome
    font-size: 2em


hr.star-about 
  border-color: body-bk-colour
  &:after
    content: "\f1d1"
    color: body-bk-colour
    background-color: about-bk-colour

hr.star-contact 
  border-color: star-light
  &:after
    color: star-light
    background-color: contact-bk-colour

hr.star-light 
  border-color: white-colour
  &:after
    color: white-colour
    background-color: body-bk-colour

.floating-label-form-group 
  position: relative
  margin-bottom: 0
  padding-bottom: .5em
  border-bottom: 1px solid #eee


.floating-label-form-group input, .floating-label-form-group textarea 
  z-index: 1
  position: relative
  padding-right: 0
  padding-left: 0
  border: 0
  border-radius: 0
  font-size: 1.5em
  background: 0 0
  box-shadow: none!important
  resize: none
  color: white-colour


.floating-label-form-group label 
  display: block
  z-index: 0
  position: relative
  top: 2em
  margin: 0
  font-size: .85em
  line-height: 1.764705882em
  vertical-align: middle
  vertical-align: baseline
  opacity: 0
  -webkit-transition: top .3s ease,opacity .3s ease
  -moz-transition: top .3s ease,opacity .3s ease
  -ms-transition: top .3s ease,opacity .3s ease
  transition: top .3s ease,opacity .3s ease


.floating-label-form-group::not(:first-child) 
  padding-left: 14px
  border-left: 1px solid #eee


.floating-label-form-group-with-value label 
  top: 0
  opacity: 1


form .row:first-child .floating-label-form-group 
  border-top: 1px solid #eee

.help-block
  color: car-colour
  
.text-danger
  color: gamer-colour

.btn-form
  background-color: navbar-bk-colour
  border-colour: #8e2304
  &:hover
    background-color: navbar-hover-bk-colour

h1.title
  display: inline-block
  